import React, { useState } from 'react';
import { menuData } from '../data/menuData';
import { MenuItem } from '../types/menu';
import { useCartHelpers } from '../context/CartContext';

const Menu: React.FC = () => {
  const [selectedCategory, setSelectedCategory] = useState<string>('shawarma');
  const { addToCart, getCartItemCount, getCartTotal } = useCartHelpers();
  const [selectedItem, setSelectedItem] = useState<MenuItem | null>(null);
  const [showCustomization, setShowCustomization] = useState(false);
  const [quantity, setQuantity] = useState(1);
  const [customizations, setCustomizations] = useState<string[]>([]);

  const formatPrice = (price: number): string => {
    return `‚Ç¶${price.toLocaleString()}`;
  };

  const openCustomization = (item: MenuItem) => {
    setSelectedItem(item);
    setShowCustomization(true);
    setQuantity(1);
    setCustomizations([]);
  };

  const toggleCustomization = (custom: string) => {
    setCustomizations(prev => 
      prev.includes(custom) 
        ? prev.filter(c => c !== custom)
        : [...prev, custom]
    );
  };

  const getCartItemCountHelper = (): number => {
    return getCartItemCount();
  };

  const getCartTotalHelper = (): number => {
    return getCartTotal();
  };

  const MenuItemCard: React.FC<{ item: MenuItem }> = ({ item }) => {
    const { addToCart } = useCartHelpers();

    return (
      <div className="menu-item group bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300">
        <div className="relative overflow-hidden rounded-lg mb-4">
          <img
            src={item.image || 'https://images.unsplash.com/photo-1563054499-93e7b62b4c60?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80'}
            alt={item.name}
            className="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-300"
          />
          
          {/* Badges */}
          <div className="absolute top-2 left-2 flex flex-wrap gap-2">
            {item.isPopular && (
              <span className="bg-yellow-500 text-white text-xs px-2 py-1 rounded-full">
                Popular
              </span>
            )}
            {item.isSpicy && (
              <span className="bg-red-500 text-white text-xs px-2 py-1 rounded-full">
                Spicy
              </span>
            )}
            {item.isVegetarian && (
              <span className="bg-green-500 text-white text-xs px-2 py-1 rounded-full">
                Veg
              </span>
            )}
          </div>
          
          {/* Quick Actions */}
          <div className="absolute top-2 right-2 flex gap-2">
            <button 
              onClick={() => openCustomization(item)}
              className="bg-white/90 backdrop-blur-sm p-2 rounded-full hover:bg-white transition-colors"
              title="Customize"
            >
              <span className="text-xs font-semibold">‚öôÔ∏è</span>
            </button>
          </div>
        </div>

        <div className="p-4">
          <div className="flex justify-between items-start mb-3">
            <div className="flex-1">
              <h3 className="text-lg font-semibold text-gray-900 mb-1" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>{item.name}</h3>
              <p className="text-gray-600 text-sm line-clamp-2 mb-2" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>{item.description}</p>
              
              {/* Nutrition Info */}
              <div className="flex gap-4 text-xs text-gray-500 mb-3">
                <span>üî• {Math.floor(Math.random() * 200 + 300)} cal</span>
                <span>‚è±Ô∏è {Math.floor(Math.random() * 15 + 20)} min</span>
                <span>üìä Serves {Math.floor(Math.random() * 2 + 1)}</span>
              </div>
            </div>
            <div className="text-right">
              <span className="text-primary-600 font-bold text-lg" style={{ fontFamily: 'Merriweather, serif' }}>{formatPrice(item.price)}</span>
            </div>
          </div>
          
          {/* Action Buttons */}
          <div className="flex gap-2">
            <button 
              onClick={() => addToCart(item, 1)}
              className="flex-1 bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-3 rounded-lg transition-colors duration-200 text-sm"
              style={{ fontFamily: 'Merriweather, serif' }}
            >
              Add to Cart
            </button>
            <button 
              onClick={() => openCustomization(item)}
              className="bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-3 rounded-lg transition-colors duration-200 text-sm"
              style={{ fontFamily: 'Merriweather, serif' }}
            >
              Customize
            </button>
          </div>
        </div>
      </div>
    );
  };

  return (
    <div>
      <section id="menu" className="py-16 bg-gray-50">
        <div className="container mx-auto px-4">
        {/* Section Header */}
        <div className="text-center mb-12">
          <h2 className="text-2xl font-bold text-gray-900 mb-4" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '-0.02em' }}>
            Our <span className="text-primary-600">Menu</span>
          </h2>
          <p className="text-base text-gray-600 max-w-3xl mx-auto" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>
            Explore our wide variety of authentic shawarma, grilled delicacies, and refreshing beverages
          </p>
        </div>

        {/* Category Tabs */}
        <div className="flex flex-wrap justify-center mb-12">
          {menuData.map((category) => (
            <button
              key={category.id}
              onClick={() => setSelectedCategory(category.id)}
              className={`px-6 py-3 m-2 rounded-lg font-medium transition-all duration-200 ${
                selectedCategory === category.id
                  ? 'bg-primary-600 text-white shadow-lg'
                  : 'bg-white text-gray-700 hover:bg-primary-50 border border-gray-200'
              }`}
            >
              {category.name}
            </button>
          ))}
        </div>

        {/* Category Content */}
        {menuData.map((category) => (
          selectedCategory === category.id && (
            <div key={category.id} className="animate-fadeIn">
              {/* Category Header */}
              <div className="text-center mb-8">
                <h3 className="text-xl font-bold text-gray-900 mb-2" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '-0.02em' }}>{category.name}</h3>
                <p className="text-sm text-gray-600" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>{category.description}</p>
              </div>

              {/* Menu Items Grid */}
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {category.items.map((item) => (
                  <MenuItemCard key={item.id} item={item} />
                ))}
              </div>
            </div>
          )
        ))}

        {/* Combo Deals Section */}
        <div className="mt-16 bg-primary-600 rounded-2xl p-6 text-white">
          <div className="text-center mb-6">
            <h3 className="text-xl font-bold mb-3" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '-0.02em' }}>Combo Deals</h3>
            <p className="text-primary-100 text-sm" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>Save more with our special combination packages</p>
          </div>
          
          <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div className="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <h4 className="text-base font-semibold mb-2" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>Student Combo</h4>
              <p className="text-primary-100 text-sm mb-3" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>Shawarma + Fries + Drink</p>
              <div className="flex justify-between items-center">
                <span className="text-lg font-bold" style={{ fontFamily: 'Merriweather, serif' }}>‚Ç¶2,500</span>
                <span className="text-xs line-through text-primary-200" style={{ fontFamily: 'Merriweather, serif' }}>‚Ç¶3,100</span>
              </div>
            </div>
            
            <div className="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <h4 className="text-base font-semibold mb-2" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>Office Lunch</h4>
              <p className="text-primary-100 text-sm mb-3" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>Mixed Grill + Jollof Rice + Drink</p>
              <div className="flex justify-between items-center">
                <span className="text-lg font-bold" style={{ fontFamily: 'Merriweather, serif' }}>‚Ç¶4,000</span>
                <span className="text-xs line-through text-primary-200" style={{ fontFamily: 'Merriweather, serif' }}>‚Ç¶5,200</span>
              </div>
            </div>
            
            <div className="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
              <h4 className="text-base font-semibold mb-2" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>Family Pack</h4>
              <p className="text-primary-100 text-sm mb-3" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>4 Shawarmas + 2 Sides + 4 Drinks</p>
              <div className="flex justify-between items-center">
                <span className="text-lg font-bold" style={{ fontFamily: 'Merriweather, serif' }}>‚Ç¶8,500</span>
                <span className="text-xs line-through text-primary-200" style={{ fontFamily: 'Merriweather, serif' }}>‚Ç¶11,000</span>
              </div>
            </div>
          </div>
        </div>

        {/* Call to Action */}
        <div className="text-center mt-8">
          <p className="text-sm text-gray-600 mb-3" style={{ fontFamily: 'Merriweather, serif', letterSpacing: '0.01em' }}>Can't decide? Let us help you!</p>
          <button 
            onClick={() => {
              // Scroll to top of menu and show all items
              window.scrollTo({ top: 0, behavior: 'smooth' });
              setSelectedCategory('shawarma');
            }}
            className="btn-secondary text-sm" 
            style={{ fontFamily: 'Merriweather, serif' }}
          >
            View Full Menu with Prices
          </button>
        </div>
      </div>
    </section>

    {/* Customization Modal */}
    {showCustomization && selectedItem && (
      <div className="fixed inset-0 z-50 overflow-hidden">
        <div 
          className="absolute inset-0 bg-black bg-opacity-50 transition-opacity"
          onClick={() => setShowCustomization(false)}
        />
        <div className="flex items-center justify-center min-h-screen p-4">
          <div className="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            {/* Modal Header */}
            <div className="flex items-center justify-between p-6 border-b">
              <h3 className="text-xl font-bold text-gray-900" style={{ fontFamily: 'Merriweather, serif' }}>
                Customize {selectedItem.name}
              </h3>
              <button
                onClick={() => setShowCustomization(false)}
                className="p-2 hover:bg-gray-100 rounded-lg transition-colors"
              >
                <span className="text-gray-500 text-xl">&times;</span>
              </button>
            </div>

            {/* Modal Content */}
            <div className="p-6">
              {/* Product Image */}
              <div className="mb-6">
                <img
                  src={selectedItem.image}
                  alt={selectedItem.name}
                  className="w-full h-48 object-cover rounded-lg"
                />
              </div>

              {/* Customization Options */}
              <div className="space-y-6">
                {/* Quantity Selector */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2" style={{ fontFamily: 'Merriweather, serif' }}>
                    Quantity
                  </label>
                  <div className="flex items-center gap-4">
                    <button
                      onClick={() => setQuantity(Math.max(1, quantity - 1))}
                      className="w-10 h-10 rounded-lg border border-gray-300 flex items-center justify-center hover:bg-gray-100 transition-colors"
                    >
                      <span className="text-lg">‚àí</span>
                    </button>
                    <input
                      type="number"
                      min="1"
                      max="10"
                      value={quantity}
                      onChange={(e) => setQuantity(parseInt(e.target.value) || 1)}
                      className="w-20 h-10 text-center border border-gray-300 rounded-lg px-3"
                      style={{ fontFamily: 'Merriweather, serif' }}
                    />
                    <button
                      onClick={() => setQuantity(Math.min(10, quantity + 1))}
                      className="w-10 h-10 rounded-lg border border-gray-300 flex items-center justify-center hover:bg-gray-100 transition-colors"
                    >
                      <span className="text-lg">+</span>
                    </button>
                  </div>
                </div>

                {/* Size Options */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2" style={{ fontFamily: 'Merriweather, serif' }}>
                    Size
                  </label>
                  <div className="grid grid-cols-3 gap-3">
                    {['Regular', 'Large', 'Extra Large'].map((size) => (
                      <label key={size} className="flex items-center space-x-2 cursor-pointer">
                        <input
                          type="radio"
                          name="size"
                          value={size}
                          className="text-primary-600 focus:ring-primary-500"
                        />
                        <span className="text-sm" style={{ fontFamily: 'Merriweather, serif' }}>{size}</span>
                      </label>
                    ))}
                  </div>
                </div>

                {/* Ingredients Customization */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2" style={{ fontFamily: 'Merriweather, serif' }}>
                    Customizations
                  </label>
                  <div className="space-y-2">
                    {selectedItem.category === 'shawarma' && [
                      'Extra Sauce', 'No Onions', 'Extra Meat', 'Spicy Level', 'Cheese Add'
                    ].map((option) => (
                      <label key={option} className="flex items-center space-x-2 cursor-pointer">
                        <input
                          type="checkbox"
                          checked={customizations.includes(option)}
                          onChange={() => toggleCustomization(option)}
                          className="text-primary-600 focus:ring-primary-500 rounded"
                        />
                        <span className="text-sm" style={{ fontFamily: 'Merriweather, serif' }}>{option}</span>
                      </label>
                    ))}
                    
                    {selectedItem.category === 'grills' && [
                      'Grilled Well Done', 'Medium Rare', 'Extra Spicy', 'With Vegetables'
                    ].map((option) => (
                      <label key={option} className="flex items-center space-x-2 cursor-pointer">
                        <input
                          type="checkbox"
                          checked={customizations.includes(option)}
                          onChange={() => toggleCustomization(option)}
                          className="text-primary-600 focus:ring-primary-500 rounded"
                        />
                        <span className="text-sm" style={{ fontFamily: 'Merriweather, serif' }}>{option}</span>
                      </label>
                    ))}
                  </div>
                </div>

                {/* Special Instructions */}
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-2" style={{ fontFamily: 'Merriweather, serif' }}>
                    Special Instructions
                  </label>
                  <textarea
                    rows={3}
                    placeholder="Any special requests or dietary requirements..."
                    className="w-full border border-gray-300 rounded-lg px-3 py-2"
                    style={{ fontFamily: 'Merriweather, serif' }}
                  />
                </div>
              </div>

              {/* Price Summary */}
              <div className="border-t pt-4">
                <div className="flex justify-between items-center mb-4">
                  <span className="text-gray-600" style={{ fontFamily: 'Merriweather, serif' }}>
                    {selectedItem.name} x {quantity}
                  </span>
                  <span className="text-xl font-bold text-primary-600" style={{ fontFamily: 'Merriweather, serif' }}>
                    {formatPrice(selectedItem.price * quantity)}
                  </span>
                </div>
              </div>

              {/* Action Buttons */}
              <div className="flex gap-3">
                <button
                  onClick={() => setShowCustomization(false)}
                  className="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-3 px-4 rounded-lg transition-colors"
                  style={{ fontFamily: 'Merriweather, serif' }}
                >
                  Cancel
                </button>
                <button
                  onClick={() => {
                    if (selectedItem) {
                      addToCart(selectedItem, quantity, customizations);
                    }
                  }}
                  className="flex-1 bg-primary-600 hover:bg-primary-700 text-white font-medium py-3 px-4 rounded-lg transition-colors"
                  style={{ fontFamily: 'Merriweather, serif' }}
                >
                  Add to Cart - {formatPrice(selectedItem.price * quantity)}
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    )}

    {/* Floating Cart Indicator */}
    {getCartItemCountHelper() > 0 && (
      <div className="fixed bottom-4 right-4 bg-primary-600 text-white rounded-full shadow-lg p-3 z-40">
        <div className="flex items-center space-x-2">
          <span className="text-sm font-medium" style={{ fontFamily: 'Merriweather, serif' }}>
            {getCartItemCountHelper()} items
          </span>
          <span className="bg-white text-primary-600 text-xs px-2 py-1 rounded-full font-bold">
            {formatPrice(getCartTotalHelper())}
          </span>
        </div>
      </div>
    )}
        </div>
      </section>
    </div>
  </div>
  );
};

export default Menu;
